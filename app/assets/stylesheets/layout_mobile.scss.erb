@import 'variables';


@media screen and (max-width: 1023px) {
  html {
    body {

      div.splash-header {

        div.splash-image {
          div.header-text {
            float: right;
            margin-right: 15%;
            height: 0;
            padding-top: 10%;

            h1 {
              font-size: 2.5em;
            }

            div.link-wrapper {
              margin-top: 1em;

              a, a:visited {
                font-size: 1em;
                height: 1em;
                padding: 1em 1em;
              }
              a.box-shadow {

              }
            }
          }
        }
      }

      div.content {
        max-width: 100%;
        padding: 0 1em;
        margin: 0;
      }
    }
  }
}