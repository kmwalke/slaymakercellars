@import 'variables';


@media screen and (max-width: 1023px) {
  html {
    body {
      .content, table, p, span, a {
        z-index: 1;
      }

      div.splash-header, div.header {

        button.hamburger-menu, nav {

          transition: opacity .35s, visibility .35s, width .35s;
        }

        button.hamburger-menu {
          z-index: 100;
          position: fixed;
          right: 0;
          top: 0;
          margin: 1em;
          width: 5em;
          height: 5em;
          display: block;
          border: 1px solid $brown;
          @include rounded-corners(0.5em);

          span.hamburger {
            color: $brown;
            font-weight: normal;
            display: block;
            clear: both;
            font-size: 4em;
            line-height: 0.2em;
          }

          span.hamburger:first-child {
            margin-top: -0.7em;
          }

          nav {
            visibility: hidden;
            opacity: 0;
            position: fixed;
            top: 0;
            right: 0;
            width: 20%;
            height: 100%;
            background: $blue;
            border-left: 5px solid darken($brown, 20%);

            ul.links {

              li {
                display: block;
                clear: both;

                a, a:visited {
                  padding-left: 1em;
                }
              }
            }
          }
        }

        button.hamburger-menu:focus, button.hamburger-menu:focus-within {

          nav {
            visibility: visible;
            opacity: 1;
            width: 50%;
          }
        }
      }

      div.splash-header {

        div.splash-image {
          div.header-text {
            float: right;
            margin-right: 15%;
            height: 0;
            padding-top: 10%;

            h1 {
              font-size: 2.5em;
            }

            div.link-wrapper {
              margin-top: 1em;

              a, a:visited {
                font-size: 1em;
                height: 1em;
                padding: 1em 1em;
              }

              a.box-shadow {

              }
            }
          }
        }
      }

      div.content {
        max-width: 100%;
        padding: 0 1em;
        margin: 0;

        table {
          font-size: x-large;
        }
      }
    }
  }
}