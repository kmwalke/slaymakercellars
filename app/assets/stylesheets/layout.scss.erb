@import 'variables';

$header-height: 5em;
$content-width: 65em;

html {
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;

  body {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
    background-image: url(<%= asset_path('bg_texture.png') %>);
    background-color: $tan;
    color: $brown;
    font-size: 1em;
    font-family: 'Courier Prime', monospace;

    h1, h2, h3, h4, h5 {
      font-family: 'Averia Serif Libre', cursive;
      color: $blue;
    }

    div.splash-header {
      height: 0;
      padding-bottom: 40%;
      background-image: url(<%= asset_path('peach.jpg') %>);
      background-repeat: no-repeat;
      background-size: 100%;
    }

    div.header {
      height: $header-height;
    }

    div.splash-header, div.header {
      width: 100%;
      margin: 0;
      display: inline-block;
      background-color: $blue;
      vertical-align: top;

      button.hamburger-menu {
        font-family: 'Courier Prime', monospace;
        border: none;
        background: none;

        nav {

          ul.links {
            position: absolute;
            right: 3%;
            top: 1em;
            width: 100%;
            margin: 0;
            padding: 0;

            li.home_text {
              display: none;
            }

            li {
              text-decoration: none;
              display: inline;

              a {
                line-height: 2em;
                margin-right: 2em;
                font-size: x-large;
                float: right;
              }

              a, a:visited {
                color: $tan;
                text-decoration: none;
              }

              a:hover {
                text-decoration: underline;
              }

              img {
                margin-left: 2em;
              }
            }
          }
        }
      }

      div.splash-image {
        width: 100%;

        div.header-text {
          float: right;
          margin-right: 25%;
          height: 0;
          padding-top: 10%;

          h1 {
            font-size: 4em;
            line-height: 0.5em;
            color: $tan;
            text-shadow: 2px 2px 5px $black;
          }

          span {
            color: $tan;
            font-size: 1.5em;
            display: block;
            text-shadow: 2px 2px 5px $black;
          }

          div.link-wrapper {
            display: inline-block;
            margin-top: 2em;
            position: relative;
            width: 6em;
            overflow: visible;

            a, a:visited {
              position: absolute;
              left: 0;
              right: 0;
              width: 100%;
              height: 1em;
              color: black;
              text-decoration: none;
              background-color: $tan;
              padding: 1em 2em;
              text-align: center;
            }

            a.box-shadow {
              left: 0.75em;
              top: 0.75em;
              background-color: $blue;
              color: $blue;
              border: 1px solid $tan;
            }
          }

          div.link-wrapper:hover {
            a {
              text-decoration: underline;
            }
          }
        }
      }
    }

    div.content {
      position: relative;
      max-width: $content-width;
      padding-left: 50%;
      margin-left: -($content-width/2);
      line-height: 1.4;

      a, a:visited, a:active {
        color: $blue;
      }

      a:hover {
        text-decoration: none;
      }

      fieldset {
        legend {
          margin: 0 -2em;
          font-size: x-large;
        }

        padding: 0 5em 1em 5em;
      }

      .float-right {
        float: right;
      }

      .float-left {
        float: left;
      }

      div.spacer {
        height: 5em;
      }

      div.section {
        clear: both;

        h1 {
          width: 8em;
          color: $blue;
          font-size: 3em;
        }

        p, ul {
          margin: 0 0 2em 15%;
          width: 60%;
          line-height: 1.5em;
        }

        h1.right {
          margin-left: 30%;
        }

        div.section-title {
          display: block;
          width: $page-title-size;
          height: $page-title-size;
          background: $tan;
          margin: 0;
          padding: 0;

          h2 {
            color: $brown;
            display: block;
            width: $page-title-size * 2/3;
            text-align: center;
            line-height: $page-title-size * 2/3;
            margin: 0;
            padding: 0;
            font-size: 1.5em;
          }

          img {
            margin-top: -$page-title-size*3/5;
            margin-left: $page-title-size*3/7;
            transform: rotate(90deg);

            span {
              color: $black;
              display: block;
              margin: 0 0 0 $page-title-size/2*3/4;
              padding: 0;
              font-weight: bold;
              font-size: 1.25em;
              line-height: .75em;
            }
          }
        }

      }
    }

    div.footer {
      background-color: $blue;
      color: $tan;

      div.contact-wrapper {
        padding: 7em 0;
        margin: 0 0 0 20%;

        img {
          display: inline-block;
        }

        ul {
          display: inline-block;
          width: 60%;

          li {
            display: inline-block;

            span, a {
              display: block;
              margin-right: 3em;
            }

            a {
              color: $tan;
              text-decoration: underline;
              margin-bottom: 2em;
            }

            a:hover {
              color: darken($tan, 30%);
              text-decoration: none;
            }

            ul {
              width: 100%;
              padding: 0;
            }
          }
        }
      }

      div.bottom-stripe {
        background-color: $brown;
        text-align: center;

        span {
          margin-right: 5em;
          height: 2em;
          line-height: 2em;
        }

        a {
          color: $tan;
        }
      }
    }
  }
}
