@import 'variables';

$splash-header-height: 50em;
$header-height: 5em;
$content-width: 60%;

html {
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;

  body {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
    background-image: url(<%= asset_path('bg_texture.png') %>);
    background-color: $tan;
    color: $brown;

    font-family: 'Courier Prime', monospace;

    h1, h2, h3, h4, h5 {
      font-family: 'Averia Serif Libre', cursive;
      color: $blue;
    }

    div.splash-header {
      height: $splash-header-height;
    }

    div.header {
      height: $header-height;
    }

    div.splash-header, div.header {
      width: 100%;
      margin: 0;
      display: flex;

      div.left, div.right {
        overflow-x: hidden;
      }

      div.left {
        flex: 0 0 30%;
        background-color: $brown;
        overflow-x: visible;
        position: relative;

        div.image-wrapper {
          width: 200%;
          height: $splash-header-height;
          position: absolute;
          left: 0;

          img {
            margin-top: 8%;
            width: 30%;
            margin-left: -6.6%;
          }
        }
      }

      div.right {
        flex: 1;
        background-color: $blue;
        color: $brown;
        padding-left: 20%;

        div.links {
          position: absolute;
          left: 40%;
          top: 1em;
          width: 60%;
          margin: 0;
          padding: 0;

          a {
            line-height: 2em;
            margin-right: 2em;
            font-size: x-large;
          }

          a, a:visited {
            color: $tan;
            text-decoration: none;
          }

          a:hover {
            text-decoration: underline;
          }

          img {
            float: right;
            margin-right: 10%;
          }
        }

        div.header-text {
          padding-top: $splash-header-height/3;

          h1 {
            font-size: 4em;
            line-height: 0.5em;
            color: $brown;
            text-shadow: 2px 2px 5px $black;
          }

          span {
            font-size: 1.5em;
            display: block;
            text-shadow: 2px 2px 5px $black;
          }

          div.link-wrapper {
            display: inline-block;
            margin-top: 2em;
            position: relative;
            width: 6em;
            overflow: visible;

            a, a:visited {
              position: absolute;
              left: 0;
              right: 0;
              width: 100%;
              height: 1em;
              color: black;
              text-decoration: none;
              background-color: $tan;
              padding: 1em 2em;
              text-align: center;
            }

            a:hover {
              text-decoration: underline;
            }

            a.box-shadow {
              left: 0.75em;
              top: 0.75em;
              background-color: $blue;
              color: $blue;
              border: 1px solid $tan;
            }
          }
        }
      }
    }

    div.content{
      position: relative;
      width: $content-width;
      padding-left: 50%;
      margin-left: -($content-width/2);
      line-height: 1.4;

      a, a:visited, a:active {
        color: $blue;
      }

      a:hover {
        text-decoration: none;
      }

      fieldset {
        legend {
          margin: 0 -2em;
          font-size: x-large;
        }
        padding: 0 5em 1em 5em;
      }

      .float-right {
        float: right;
      }

      .float-left {
        float: left;
      }
    }

    div.footer {
      background-color: $blue;
      color: $tan;

      div.contact-wrapper {
        padding: 7em 0;
        margin: 0 0 0 20%;

        img {
          display: inline-block;
        }

        ul {
          display: inline-block;
          width: 60%;

          li {
            display: inline-block;

            span, a {
              display: block;
              margin-right: 3em;
            }

            a {
              color: $tan;
              text-decoration: underline;
              margin-bottom: 2em;
            }

            a:hover {
              color: darken($tan, 30%);
              text-decoration: none;
            }

            ul {
              width: 100%;
              padding: 0;
            }
          }
        }
      }

      div.bottom-stripe {
        background-color: $brown;
        text-align: center;

        span {
          margin-right: 5em;
          height: 2em;
          line-height: 2em;
        }

        a {
          color: $tan;
        }
      }
    }
  }
}
