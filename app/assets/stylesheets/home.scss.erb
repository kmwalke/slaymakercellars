@import 'variables';

body.home {

  div.page-title {
    @include rounded-corners($page-title-size/2);
    display: block;
    width: $page-title-size;
    height: $page-title-size;
    position: absolute;
    top: -$page-title-size*5/8;
    right: 10em;
    background: $tan;
    margin: 0;
    padding: 0;

    h2 {
      color: $brown;
      display: block;
      width: $page-title-size * 2/3;
      text-align: center;
      line-height: $page-title-size * 2/3;
      margin: 0;
      padding: 0;
      font-size: 1.5em;
    }

    img {
      margin-top: -$page-title-size*1/4;
      margin-left: $page-title-size/2*3/4;

      span {
        color: $black;
        display: block;
        margin: 0 0 0 $page-title-size/2*3/4;
        padding: 0;
        font-weight: bold;
        font-size: 1.25em;
        line-height: .75em;
      }
    }
  }

  div.section {

    ul.process-list {
      list-style: none;
      text-align: center;

      li:first-child {
        margin: 0;
      }

      li {
        display: inline-block;
        width: 10em;
        margin-left: 5%;
      }

      li:last-child h2 {
        word-spacing: 50em;
      }
    }
  }
}