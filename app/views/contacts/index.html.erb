<h1>
  Where to Buy
</h1>

<ul class="states">
  <% @states.each do |state| -%>
    <li class="state">
      <h2 class="state"><%= state.name %></h2>
      <ul class="towns">
        <% state.towns.each do |town| -%>
          <li class="town">
            <h3 class="town"><%= town.name %></h3>
            <ul class="contacts">
              <% town.contacts.where(deleted_at: nil).each do |contact| -%>
                <li class="contact">
                  <% if contact.url.blank? -%>
                    <span><%= contact.name %></span>
                  <% else -%>
                    <%= link_to contact.name, contact.url, target: '_blank' %>
                  <% end -%>
                </li>
              <% end -%>
            </ul>
          </li>
        <% end -%>
      </ul>
    </li>
  <% end -%>
</ul>
