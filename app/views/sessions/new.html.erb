<p id=”alert”><%= alert %></p>
<h1>Login</h1>
<p><%= form_tag('/auth/xero_oauth2', method: 'post') do %>
    <button type='submit'>Connect to Xero</button>
  <% end %></p>
<%= form_tag sessions_path do |form| %>
  <div class=”field”>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class=”field”>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class=”actions”>
    <%= submit_tag 'Log In' %>
  </div>
<% end %>