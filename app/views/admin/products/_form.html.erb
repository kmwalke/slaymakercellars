<% if product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

    <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="actions">
  <%= form.submit %>
</div>

<div class="column">
  <div class="field">
    <%= form.check_box :is_public %>
    <%= form.label :is_public, "Show on 'Meads' Page", class: :inline %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, autofocus: 'autofocus' %>
  </div>

  <div class="field">
    <%= form.label :xero_code, 'Xero Code' %>
    <%= form.text_field :xero_code %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.select :category, Product::CATEGORIES %>
  </div>
</div>

<div class="column">
  <div class="field">
    <%= form.label :price_point %>
    <%= form.text_field :price_point %>
  </div>

  <div class="field">
    <%= form.label :case_size %>
    <%= form.text_field :case_size %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
</div>
