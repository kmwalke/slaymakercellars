<h1>Products</h1>

<%= link_to 'New Product', new_admin_product_path %>

<br/>
<br/>

<div class="wide-wrapper">
  <table class="crud">
    <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Synced?</th>
      <th>In Production?</th>
      <th>Public?</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @products.each do |product| %>
      <tr class="<%= cycle "even", "odd" %>">
        <td><%= link_to product.name, edit_admin_product_path(product) %></td>
        <td><%= product.category %></td>
        <td>
          <span><%= product.synced? ? '✓' : 'X' %></span>
        </td>
        <td>
          <span><%= product.in_production? ? '✓' : 'X' %></span>
        </td>
        <td>
          <span><%= product.is_public? ? '✓' : 'X' %></span>
        </td>
        <td>
          <%= link_to 'X', admin_product_path(product), method: :delete, id: "delete_#{product.id}", data: { confirm: 'Are you sure?' } %>
          &nbsp;
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
