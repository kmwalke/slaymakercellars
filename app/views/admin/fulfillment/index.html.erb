<h1>Fulfillment</h1>
<p>All numbers are bottles, not cases.</p>

<% @fulfillment.days.each do |date| -%>
  <div class="day">
    <h2><%= humanize_date date %></h2>

    <table class="crud fulfillment">
      <tr class="title">
        <th>Type</th>
        <th>Bottles</th>
      </tr>

      <% @fulfillment.product_names.each do |product| -%>
        <tr>
          <td><%= product %></td>
          <td class=<%= @fulfillment.amount(date, product) > 0 ? 'active' : 'inactive' %>>
            <%= @fulfillment.amount(date, product) %>
          </td>
        </tr>
      <% end -%>

    </table>
  </div>
<% end -%>