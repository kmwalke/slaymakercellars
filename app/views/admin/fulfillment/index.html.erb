<h1>Fulfillment</h1>

<%= @fulfillment.plan %>

<% @fulfillment.days.each do |date| -%>
  <div class="day">
    <h2><%= humanize_date date %></h2>

    <table class="crud fulfillment">
      <tr class="title">
        <th>Type</th>
        <th>Bottles</th>
      </tr>

      <% @fulfillment.day_plan(date).keys.each do |product| -%>
        <tr>
          <td><%= product %></td>
          <td class=<%= @fulfillment.day_plan(date)[product] > 0 ? 'active' : 'inactive' %>>
            <%= @fulfillment.day_plan(date)[product] %>
          </td>
        </tr>
      <% end -%>

    </table>
  </div>
<% end -%>