<h1>Fulfillment</h1>

<% @fulfillment.keys.each do |date| -%>
  <div class="day">
    <h2><%= humanize_date date %></h2>

    <table class="crud fulfillment">
      <tr class="title">
        <th>Type</th>
        <th>Bottles</th>
      </tr>

      <% @fulfillment[date].keys.each do |product| -%>
        <tr>
          <td><%= product %></td>
          <td class=<%= @fulfillment[date][product] > 0 ? 'active' : 'inactive' %>>
            <%= @fulfillment[date][product] %>
          </td>
        </tr>
      <% end -%>

    </table>
  </div>
<% end -%>