<h1>Create a Delivery Route</h1>

<%= form_with do |form| %>

  <%= fields_for 'order' do |f| %>
    <table class="delivery_route crud">
      <tr class="header">
        <th></th>
        <th>PO</th>
        <th>Assigned To</th>
        <th>Business</th>
        <th>Delivery Date</th>
        <th>Town</th>
      </tr>
      <% @orders.each do |order| -%>
        <tr class="<%= cycle "even", "odd" %>">
          <td>
            <%= f.check_box order.id, { id: "order_#{order.id}" } %>
          </td>
          <td>
            <label for="<%= "order_#{order.id}" %>">
              <%= order.id %>
            </label>
          </td>
          <td>
            <label for="<%= "order_#{order.id}" %>">
              <%= order.assigned_to&.name %>
            </label>
          </td>
          <td>
            <label for="<%= "order_#{order.id}" %>">
              <%= order.contact.name %>
            </label>
          </td>
          <td>
            <label for="<%= "order_#{order.id}" %>">
              <%= humanize_date order.delivery_date %>
            </label>
          </td>
          <td>
            <label for="<%= "order_#{order.id}" %>">
              <%= order.contact.town.name %>
            </label>
          </td>
        </tr>
      <% end -%>
    </table>

  <% end %>
  <%= form.submit 'Create', name: :show, disable_with: "Loading..." %>
<% end -%>

<%= link_to 'Back', admin_path %>
